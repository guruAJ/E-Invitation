@model E_Invitation.Models.Ocassion
<div class="table-responsive">
    <table class="table  display nowrap text-center tblDetail" id="">
        <thead>
            <tr>
                <th>
                    S/No
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OcassionName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OcassionDate)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.IsFinish)
                </th>


                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                int count = 0;
                string date = "";
            }
            @foreach (var item in (IEnumerable<E_Invitation.Models.Ocassion>)ViewBag.AllData)
            {
                count++;
