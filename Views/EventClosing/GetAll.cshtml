                    <td>
                        <span class="spnid d-none">@item.Id</span>
                        <span>@count</span>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OcassionName)
                    </td>

                    <td>

                        <span class="OcassionDate">@item.OcassionDate.ToString("dd/MM/yyyy").Replace("12:00:00 AM", "").Replace("-","/")</span>
                    </td>


