@model E_Invitation.Models.Vacancy

@{
    ViewData["Title"] = "Vacancy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/DeveloperJS/Vacancy.js?v1"></script>
<div class="content-wrapper">
    <div class="row">

        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Vacancy Details</h4>
                
                  
                    <div class="text-danger">@ViewBag.Deletemessage</div>

                    @{
                        await Html.RenderPartialAsync("GetAll");
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="AddNew" data-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <span class="d-none" id="editid">
                @TempData["Id"]

            </span>

            <div class="modal-body p-0 h-100 custom-modal">
                <button type="button" id="submit" class="close" data-dismiss="modal">
                    &times;
                </button>
                <div class="row h-100 mr-0">
                    <div class="col-lg-3 d-none d-lg-block">
                        <div class="left-modal-block">
                            <div class="image-block">
                                <img src="/Images/notepad.png" />
                            </div>
                            <p class="text-white text-font2 mt-4">Please fill all fields to add detail</p>
                            <span class="btn btn-dark circle-icon-btn mt-1"><i class="mdi mdi-chevron-double-right"></i></span>
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="px-4 px-sm-3 pb-5 pt-4 inner-block">
                            <h3 class="modal-title text-blue mb-2" id="addModalTitle"> Add New Vacancy</h3>
                            <p class="mb-3 f13"> All fields are mandatory</p>
                            <div class="">

                                <form asp-action="Save">
                                    <div class="text-danger" id="spnmessage">@ViewBag.message</div>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="form-group">
                                        <label asp-for="OcassionId" class="control-label"></label>
                                        @*<input asp-for="OcassionId" class="form-control" />*@
                                        <select asp-for="OcassionId" class="form-control" asp-items="@(new SelectList(ViewBag.AllOcassion, "Id", "OcassionName"))"></select>
                                        <span asp-validation-for="OcassionId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="EnclosureId" class="control-label"></label>
                                        <select asp-for="EnclosureId" class="form-control" asp-items="@(new SelectList(ViewBag.Enclosure, "Id", "Title"))"></select>
                                        @*<input asp-for="EnclosureId" class="form-control" />*@
                                        <span asp-validation-for="EnclosureId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="CategoryId" class="control-label"></label>
                                        @*<input asp-for="CategoryId" class="form-control" />*@
                                        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Category, "Id", "Title"))"></select>
                                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                                    </div>
                                     <div class="form-group d-none" >
                                        <label asp-for="RankDesc" class="control-label"></label>
                                        <input asp-for="RankDesc" class="form-control" /> 
                                        <span asp-validation-for="RankDesc" class="text-danger"></span>
                                    </div>



                                    <div class="form-group">
                                        <label asp-for="RankId" class="control-label"></label>
                                        @*<input asp-for="RankId" class="form-control" />*@
                                        <select asp-for="RankId" class="form-control" asp-items="@(new SelectList(ViewBag.Rank, "Id", "Title"))"></select>
                                        <span asp-validation-for="RankId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Total" class="control-label"></label>
                                        <input asp-for="Total" class="form-control" />
                                        <span asp-validation-for="Total" class="text-danger"></span>
                                    </div>


                                    <div class="form-group d-none">
                                        <label asp-for="CreatedBy" class="control-label"></label>
                                        <input asp-for="CreatedBy" class="form-control" placeholder="Enter Enclosure" value="0" />

                                    </div>



                                    <div class="text-right mt-3">
                                        <button type="submit" id="btnSubmit" class="btn btn-outline-info">Submit</button>

                                        <input type="button" value="Reset" id="btnReset" class="btn btn-outline-primary" />


                                    </div>
                                </form>


                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
